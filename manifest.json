{
    "name": "jqInspect",
    "description": "Adds a right-click 'Inspect with jQuery' menu item",
    "version": "1.0.0",

    "permissions": [
        "contextMenus",
        "experimental"
    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [
        {
            "matches" : [ "*://*/*" ],
            "run_at": "document_end",
            "js": [
                "inspectWith.js"
            ]
        }
    ],

    "web_accessible_resources": [
        "captureClick.js"
    ],

    "devtools_page": "devtools.html",

    "manifest_version": 2
}
