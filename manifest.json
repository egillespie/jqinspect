{
	"name": "jqInspect",
	"description": "Adds a right-click 'Inspect with jQuery' menu item",
	"version": "1.0.0",
	
	"permissions": [
		"contextMenus"
	],
	
	"background": {
		"scripts": [
			"background.js"
		]
	},
	
	"content_scripts": [
		{
			"matches" : [ "*://*/*" ],
			"js": [
				"inspectWith.js"
			]
		}
	],

	"manifest_version": 2
}
